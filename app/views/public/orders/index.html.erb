<h1>注文履歴</h1>
<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
	    </tr>
    </thead>
    <tbody>
    	
       <% @orders.each do |order| %>

		 	<tr>
		 		<td>
		 			<%= order.created_at %>
		 		</td>
		 		<td><%#= book.title %>
		 			<%= order.postal_code %>
		 			<%= order.address %>
		 			<%= order.name %>
		 		</td>
		 		<td>
		 			<% order.order_details.each do |order_detail| %>
		 				<%= order_detail.item.name %><br>
		 			<% end %>
		 		</td>
		 	    <td>
		 	    	<%= order.total_payment %>
		 	    </td>
		 	    <td>
		 	    	<% if order.status == 0 %>
						入金待ち
					<% elsif order.status == 1 %>
						入金確認
					<% elsif order.status == 2 %>
						製作中
					<% elsif order.status == 3 %>
						発送済み
	                <% elsif order.status == 4 %>
	                <% end %>
			 	</td>
		 	    <td>
		 	    	 <%= link_to "表示する", public_order_path(order.id),class: "btn btn-primary" %>
		 	    </td>
		 	</tr>
		 	
	  <% end %>
    </tbody>
 </table>
