<h1>マイページ</h1>
<h3>登録情報</h3>
<%= link_to "編集する", edit_public_customer_path, class: "glyphicon glyphicon-book books" %>
<%= link_to "パスワードを変更する", edit_admin_password_path, class: "glyphicon glyphicon-book books" %>
<table>
		<tr>
			<th>氏名</th>
			<td><%= @customer.last_name + @customer.first_name %></td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.telephone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
</table>

<label>配送先</label>
<%= link_to "一覧を見る", public_addresses_path, class: "glyphicon glyphicon-book books" %>
<label>注文履歴</label>
<%= link_to "一覧を見る", public_orders_path, class: "glyphicon glyphicon-book books" %>