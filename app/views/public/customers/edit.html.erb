<h1>登録情報編集</h1>
<%= form_with model: @customer, url:public_customers_withdraw_path,local: true do |f| %>
 <label class="field">
    名前<%= f.label :（姓） %>
    <%= f.text_field :last_name %>
    <%= f.label :（名）%>
    <%= f.text_field :first_name %>

    <div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "フリガナ" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "フリガナ" %>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="郵便番号（ハイフンなし）">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <%= f.submit '編集内容を保存する' %>
 <% end %>
 <%= link_to "退会する", public_customers_unsubscribe_path %>
