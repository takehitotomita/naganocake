<h1>新規商品登録</h1>
<%= form_with model: @item, url: admin_items_path, method: :post,local: true do |f| %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>消費品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id,Genre.all, :id, :name, include_blank: "選択して下さい" %>


  <h4>税抜価格</h4>
  <%= f.text_field :price %>

  <h4>販売ステータス</h4>
  <%= f.select :is_active, [["有効", true],["無効", false]] %><br>
 

  <%= f.submit '新規登録', class: "btn btn-primary col-xs-12" %>
 <% end %>