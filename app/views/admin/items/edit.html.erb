<h1>商品詳細</h1>
<%= form_with model: @item, url: admin_item_path, method: :PATCH,local: true do |f| %>

  <%#= @item.image_id %>

  <h4>商品名</h4>
    <%= f.text_field :name %>

  <h4>消費品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id,Genre.all, :id, :name, include_blank: "選択して下さい" %>

  <h4>税込価格（税抜価格）</h4>
  <%= f.text_field :price %>

  <h4>販売ステータス</h4>
  <%= f.select :is_active, [["有効", true],["無効", false]] %>


  <%= f.submit '保存を編集', class: "btn btn-primary col-xs-12" %>

<% end %>