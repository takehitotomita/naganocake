<h1>注文履歴一覧</h1>
<table class="table">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
	    </tr>
    </thead>
    <tbody>
    	
       <% @orders.each do |order| %>

		 	<tr>
		 		<td>
		 			<%=link_to order.created_at, admin_order_path(order.id) %>
		 		</td>
		 		<td><%#= book.title %>
		 			<%= order.name %>
		 		</td>
		 		<td>
		 			<%= order.order_details.sum(:amount) %>
		 		</td>
		 	    <td>
		 	    	<%#= order.status %>
		 	    	<% if order.status == 0 %>
		 	    	    入金待ち
                    <% elsif order.status == 1 %>
                    	入金確認
                    <% elsif order.status == 2 %>
                    	製作中
                    <% elsif order.status == 3 %>
                    	発送準備中
                    <% elsif order.status == 4 %>
                    	発送済み
		 	    	<% end %>
		 	    </td>
		 	</tr>
	  <% end %>
    </tbody>
 </table>