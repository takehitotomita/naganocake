<h1>ジャンル編集</h1>
<%= form_with model: @genre, url: admin_genre_path, method: :patch,local: true do |f| %>
	<p>ジャンル</p>
	<%= f.text_field :name %>
	<label><%= f.radio_button :is_active, "true" %> 有効 </label>
	<label><%= f.radio_button :is_active, "false" %> 無効</label>
	<div class="pull-right">
		<%= f.submit '変更を保存する',class: "btn btn-primary" %>
<% end %>
