<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path, method: :post,local: true do |f| %>
	<p>ジャンル</p>
	<%= f.text_field :name %>

		
	<label><%= f.radio_button :is_active, "true" %> 有効 </label>
	<label><%= f.radio_button :is_active, "false" %> 無効</label>

	   
	<div class="pull-right">
		<%= f.submit '追加', class: "btn btn-primary col-xs-12" %>
	</div>
 <% end %>



 <table class="table">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
	    </tr>
    </thead>
    <tbody>
       <% @genres.each do |genre| %>
		 	<tr>
		 		<td>
		 			<%= genre.name %>
		 		</td>
		 	    <td>
					<% if @genre.is_active == true %>
						販売中
					<% else %>
					    販売停止中
					<% end %>
		 	    </td>
		 	    <td>
		 	    	<button class="btn btn-primary">
		 	    		<%= link_to '編集する', edit_admin_genre_path(genre.id),class:"btn btn-primary" %>
		 	    	</button>
		 	    </td>
		 	</tr>
	  <% end %>
    </tbody>
 </table>