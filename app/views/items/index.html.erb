<h1>商品一覧</h1>
<table>
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜き価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
	    </tr>
    </thead>
    <tbody>
       <% @items.each do |item| %>
		 	<tr>
		 		<td>
		 			<%#= link_to user_path(book.user) do %>
		 		</td>
		 		<td><%#= book.title %>
		 			<%= item.item_id %>
		 		</td>
		 	    <td>
		 	    	<%= item.name %>
		 	    	<%= link_to item.name, item_path(item.id) %>
		 	    </td>
		 	    <td>
		 	    	<%= item.price %>
		 	    </td>
		 	    <td>
		 	    	<%= item.genre.name %>
		 	    </td>
		 	    <td>
		 	    	<%= item.is_active %>
		 	    </td>
		 	</tr>
	  <% end %>
    </tbody>
</table>
